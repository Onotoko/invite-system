{
    "name": "invite-system",
    "version": "1.0.0",
    "description": "Secure invite code system with high concurrency support",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "lint": "eslint src/",
        "docker:build": "docker build -t invite-system .",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f api"
    },
    "dependencies": {
        "bcryptjs": "3.0.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "17.2.3",
        "express": "5.1.0",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "8.1.0",
        "helmet": "^8.1.0",
        "joi": "18.0.1",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "8.19.1",
        "nanoid": "5.1.6",
        "redis": "5.8.3",
        "winston": "^3.9.0"
    },
    "devDependencies": {
        "eslint": "9.37.0",
        "jest": "30.2.0",
        "nodemon": "3.1.10",
        "supertest": "7.1.4"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "testMatch": [
            "**/test/**/*.test.js"
        ]
    }
}